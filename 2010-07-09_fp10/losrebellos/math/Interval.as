package losrebellos.math {	/**	 * 	 * @author los rebellos	 * 	 */	public class Interval {				/*		 * 		 * VARIABLES		 * 		 */		public var min:Number = 0;		public var max:Number = 0;		public var correct:Boolean = true;						/*		 * 		 * CONSTRUCTOR		 * 		 */		public function Interval(_min:Number = 0,_max:Number = 0)		{			if(_min < _max)			{				min = _min;				max = _max;			}			else if(_min > _max)			{				min = _max;				max = _min;			}			else			{				min = max = _min;				correct = false;			}		}						/*		 * 		 * UTILS		 * 		 */		public function isIn(num:Number):Boolean		{			return (num >= min && num <= max);		}		public function toString():String		{			return "Interval: min = " + min + ", max = " + max;		}	}}
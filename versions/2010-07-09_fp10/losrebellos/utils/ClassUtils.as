package losrebellos.utils {	import flash.system.ApplicationDomain;	import flash.utils.getDefinitionByName;	/*	 *	 * @author los rebellos	 *	 */	public class ClassUtils 	{		/*		 * 		 * GET THE REFERENCE		 * 		 */		public static function getDefinition(_name:String):Class		{			return getDefinitionByName(_name) as Class;		}		public static function getDefinitionFromApplicationDomain(_app:ApplicationDomain, _name:String):Class		{			return _app.getDefinition(_name) as Class;		}						/*		 * 		 * GET THE CLASS		 * 		 */		public static function getClass(_name:String, _class:Class):*		{			var class_reference:Class = getDefinition(_name);			return new class_reference as _class;		}	}}
package losrebellos.text {	import flash.text.TextFormat;	/*	 *	 * @author los rebellos	 *	 */	public class TextFormatPlus extends TextFormat implements ITextFormatPlus	{		/*		 * 		 * CONSTRUCTOR		 * 		 */		public function TextFormatPlus(font:String = null, size:Object = null, color:Object = null, bold:Object = null, italic:Object = null, underline:Object = null, url:String = null, target:String = null, align:String = null, leftMargin:Object = null, rightMargin:Object = null, indent:Object = null, leading:Object = null)		{			super(font, size, color, bold, italic, underline, url, target, align, leftMargin, rightMargin, indent, leading);		}		public function setFromCSS(object:Object):void		{			if(object["display"])				this.display = object["display"];						if(object["kerning"])				this.kerning = object["kerning"];						if(object["letterSpacing"])				this.letterSpacing = object["letterSpacing"];						if(object["fontFamily"])				this.font = object["fontFamily"];						if(object["fontSize"])				this.size = StyleSheetUtils.convertCSSSize(object["fontSize"]);						if(object["color"])				this.color = StyleSheetUtils.convertCSSColor(object["color"]);						if(object["fontWeight"])				this.bold = object["fontWeight"];						if(object["fontStyle"])				this.italic = object["fontStyle"];						if(object["textDecoration"])				this.underline = object["textDecoration"];						if(object["textAlign"])				this.align = object["textAlign"];						if(object["marginLeft"])				this.leftMargin = object["marginLeft"];						if(object["marginRight"])				this.rightMargin = object["marginRight"];						if(object["textIndent"])				this.indent = object["textIndent"];						if(object["leading"])				this.leading = object["leading"];		}						/*		 * 		 * UTILS		 * 		 */		public function toString():String		{			return (this.display + " " + this.kerning + " " + this.letterSpacing + " " + this.font + " " + this.size + " " + this.color + " " + this.bold + " " + this.italic + " " + this.underline + " " + this.align + " " + this.leftMargin + " " + this.rightMargin + " " + this.indent + " " + this.leading);		}	}}
package losrebellos.text {	/*	 *	 * @author los rebellos	 *	 */	public class StyleSheetUtils 	{		/*		 * 		 * COLOR		 * 		 */		public static function convertCSSColor(color:String):uint		{			return uint("0x" + color.substr(1, color.length - 1));		}						/*		 * 		 * SIZE		 * 		 */		public static function convertCSSSize(size:String):int		{			return int(size.substr(0, size.length - 2));		}	}}
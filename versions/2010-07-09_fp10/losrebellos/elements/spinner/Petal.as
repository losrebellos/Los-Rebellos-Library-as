package losrebellos.elements.spinner {	import losrebellos.display.SpritePlus;	/*	 *	 * @author los rebellos	 *	 */	public class Petal extends SpritePlus implements IPetal	{		/*		 * 		 * CONSTRUCTOR		 * 		 */		public function Petal()		{			super();						off();		}						/*		 * 		 * CONTENT		 * 		 */		override protected function createContent():void		{			this.graphics.beginFill(0xffffff);			this.graphics.drawRoundRect(-3, -11, 6, -9, 2, 2);			this.graphics.endFill();		}						/*		 * 		 * ON / OFF		 * 		 */		public function on():void		{			this.alpha = 1;		}		public function off():void		{			this.alpha = .5;		}	}}
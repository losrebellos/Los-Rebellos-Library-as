package losrebellos.javascript {	import flash.external.ExternalInterface;	/*	 * 	 * @author los rebellos	 * 	 */	public class Javascript {		/*		 * 		 * AVAILABLE		 * 		 */		public static function get available():Boolean		{			return ExternalInterface.available;		}						/*		 * 		 * LISTENER		 * 		 */		public static function addCallback(type : String, listener : Function):Boolean		{			if(ExternalInterface.available)			{				ExternalInterface.addCallback(type, listener);				return true;			}			return false;		}						/*		 * 		 * CALL		 * 		 */		public static function call(function_name:String, ...args):Boolean		{			if(ExternalInterface.available)			{				ExternalInterface.call(function_name, args);				return true;			}			return false;		}	}}
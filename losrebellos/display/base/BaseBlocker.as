package losrebellos.display.base {	import losrebellos.display.SpritePlus;	import losrebellos.display.base.IBlocker;		import flash.geom.Rectangle;			/*	 *	 * @author los rebellos	 *	 */	public class BaseBlocker extends SpritePlus implements IBlocker	{		/*		 * 		 * CONSTRUCTOR		 * 		 */		public function BaseBlocker()		{			super();		}						/*		 * 		 * GRAPHICS		 * 		 */		public function on():void		{			this.visible = this.mouse = true;		}		public function off():void		{			this.visible = this.mouse = false;		}						/*		 * 		 * RESIZE		 * 		 */		override public function resize(rect:Rectangle):void		{			this.graphics.clear();			this.graphics.beginFill(0xff0000, 0);			this.graphics.drawRect(rect.x, rect.y, rect.width, rect.height);			this.graphics.endFill();		}	}}
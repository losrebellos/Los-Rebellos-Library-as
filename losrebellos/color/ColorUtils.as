package losrebellos.color {	import caurina.transitions.Tweener;	import flash.display.DisplayObject;	import flash.filters.ColorMatrixFilter;	import flash.geom.ColorTransform;	/**	 * 	 * @author los rebellos	 * 	 */	public class ColorUtils {				/*		 * 		 * TWEEN THE COLOR OF A DISPLAYOBJECT		 * 		 */		public static function tweenColour(_display_object:DisplayObject,_colour:uint,_time:Number = .5):void		{			Tweener.removeTweens(_display_object,"_color");			if(_time > 0)				Tweener.addTween(_display_object,{_color:_colour,time:_time});			else				changeColour(_display_object,_colour);		}						/*		 * 		 * CHANGE THE COLOR OF A DISPLAYOBJECT		 * 		 */		public static function changeColour(_display_object:DisplayObject,_colour:uint):void		{			var color_transform:ColorTransform = new ColorTransform;			color_transform.color = _colour;			_display_object.transform.colorTransform = color_transform;		}						/*		 * 		 * RESET THE NORMAL COLORS OF A DISPLAYOBJECT		 * 		 */		public static function setNormalColour(d:DisplayObject):void		{			var matrix:Array = [								1, 0, 0, 0, 0,		// red								0, 1, 0, 0, 0,		// green								0, 0, 1, 0, 0,		// blue								0, 0, 0, 1, 0		// alpha							];						d.filters = [new ColorMatrixFilter(matrix)];		}						/*		 * 		 * DISPLAYOBJECT GOES GREY SCALE		 * 		 */		public static function setGreyScale(d:DisplayObject):void		{			var filter:ColorMatrixFilter = new ColorMatrixFilter(ColorMatrix.GREY_SCALE);			d.filters = [filter];		}						/*		 * 		 * DISPLAYOBJECT GOES BLACK & WHITE		 * 		 */		public static function setBlackWhite(d:DisplayObject, threshold:int = 128):void		{			var r:Number = RGB.BLACK_AND_WHITE.r;			var g:Number = RGB.BLACK_AND_WHITE.g;			var b:Number = RGB.BLACK_AND_WHITE.b;						var matrix:Array = [								r, g, b, 0, -256 * threshold,		// red								r, g, b, 0, -256 * threshold,		// green								r, g, b, 0, -256 * threshold,		// blue								0, 0, 0, 1, 0						// alpha							];						var filter:ColorMatrixFilter = new ColorMatrixFilter(matrix);			d.filters = [filter];		}						/*		 * 		 * GET A RANDOM COLOR		 * 		 */		public static function getRandomColor():uint		{			return Math.random() * 0xffffff;		}		/*		public static function randomColour():uint		{			var r:Number = MathUtils.randomReal( new Interval(0, 1) );			var g:Number = MathUtils.randomReal( new Interval(0, 1) );			var b:Number = MathUtils.randomReal( new Interval(0, 1) );						return ColorUtils.getHex(r,g,b,1);		}		 * 		 */	}}
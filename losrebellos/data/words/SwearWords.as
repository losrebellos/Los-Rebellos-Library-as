package losrebellos.data.words {	import losrebellos.utils.StringUtils;		import losrebellos.data.AbstractXMLData;		import flash.errors.IllegalOperationError;		/*	 *	 * @author los rebellos	 *	 */	public class SwearWords extends AbstractXMLData 	{		/*		 * 		 * VARIABLES		 * 		 */		protected var swear_words:Array = [];				/*		 * 		 * CONSTRUCTOR		 * 		 */		public function SwearWords(singleton:SingletonEnforcer)		{			super();						if(!singleton)				throw new IllegalOperationError(">>>>> SwearWords class is a singleton");		}				/*		 * 		 * SINGLETON		 * 		 */		private static var _instance:SwearWords = null;		public static function get instance():SwearWords		{			if(!_instance)				_instance = new SwearWords(new SingletonEnforcer);						return _instance;		}						/*		 * 		 * XML		 * 		 */		override public function setXML(xml:XML):void		{			_xml = xml;						var xml_list_words:XMLList = _xml["word"];			for(var i:int = 0; i<xml_list_words.length(); i++)				swear_words.push(String(xml_list_words[i]).toLowerCase());		}						/*		 * 		 * IS IT?		 * 		 */		public function checkWord(w:String):Boolean		{			if(swear_words.indexOf(w.toLowerCase()) != -1 || swear_words.indexOf(StringUtils.clean(w).toLowerCase()) != -1)				return true;						return false;		}						/*		 * 		 * UTILS		 * 		 */		override public function empty():void		{			_xml = null;						swear_words = [];		}	}}class SingletonEnforcer {}
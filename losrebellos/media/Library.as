package losrebellos.media {	import losrebellos.rendering.Render;		import flash.display.Bitmap;	import flash.errors.IllegalOperationError;	import flash.events.EventDispatcher;	import flash.utils.Dictionary;		/*	 *	 * @author los rebellos	 *	 */	public class Library extends EventDispatcher 	{		/*		 * 		 * VARIABLES		 * 		 */		private var _items:Dictionary = new Dictionary(true);				/*		 * 		 * CONSTRUCTOR		 * 		 */		public function Library(singleton:SingletonEnforcer)		{			super();						if(!singleton)				throw new IllegalOperationError(">>>>> Library class is a singleton");		}				/*		 * 		 * SINGLETON		 * 		 */		private static var _instance:Library = null;		public static function get instance():Library		{			if(!_instance)				_instance = new Library(new SingletonEnforcer);						return _instance;		}						/*		 * 		 * MANAGE		 * 		 */		public function hasItem(id:String):Boolean		{			var item:* = _items[id];			if(item)				return true;						return false;		}		public function addItem(id:String, item:*):void		{			_items[id] = item;		}		public function deleteItem(id:String):void		{			var item:* = _items[id];			if(item)				item = null;		}						/*		 * 		 * GET ITEM		 * 		 */		public function getItem(id:String):*		{			var item:* = _items[id];			if(item)				return item;						return null;		}		public function getItemAsBitmap(id:String):Bitmap		{			var item:* = _items[id];			if(item)				return Render.getBitmapAuto(item);						return null;		}	}}class SingletonEnforcer {}
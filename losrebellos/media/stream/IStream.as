package losrebellos.media.stream {	import flash.events.IEventDispatcher;	/*	 *	 * @author los rebellos	 *	 */	public interface IStream extends IEventDispatcher	{		function set id(value:String):void;		function get id():String;				function set src(value:String):void;		function get src():String;				function set state(value:String):void;		function get state():String;				function set loop(value:int):void;		function get loop():int;		function set loopCounter(value:int):void;		function get loopCounter():int;				function getPercentLoaded():Number;		function getPercentPlayed():Number;				function load():void;		function play(_percent:Number = 0, _loop:int = -1):void;		function resume():void;		function pause():void;		function stop():void;		function seek(_percent:Number):void;				function destroy():void;	}}
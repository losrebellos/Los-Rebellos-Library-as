package losrebellos.lospistoleros.deeplinking {	import losrebellos.utils.StringUtils;	/*	 *	 * @author los rebellos	 *	 */	public class DeepLinking 	{		/*		 * 		 * EMPTY		 * 		 */		public static function isEmpty(_url:String):Boolean		{			var url:String = StringUtils.multipleReplace(_url, ["", ""], [" ", "/"]);			return (url == "") || (url == "/");		}						/*		 * 		 * DATA		 * 		 */		public static function getVarFromQueryString(_url:String, _name:String, _class:Class, _default:* = null):*		{			var tab:Array = _url.split("&");			for(var i:int = 0; i<tab.length; i++)			{				var tab_dlv:Array = String(tab[i]).split("=");				if(tab_dlv[0] && tab_dlv[1] && tab_dlv[0] == _name)					return tab_dlv[1] as _class;			}						return _default;		}						/*		 * 		 * CLEAN		 * 		 */		public static function cleanValue(_url:String):String		{			return StringUtils.multipleReplace(_url, ["&", "=", "/", "'", "\""], ["", "", "", "", ""]);		}	}}
package losrebellos.elements.spinner {	import losrebellos.display.SpritePlus;	/*	 *	 * @author los rebellos	 *	 */	public class Petal extends SpritePlus implements IPetal	{		/*		 *		 * VARIABLES		 *		 */		protected var COLOR:uint = 0xffffff;		protected var DISTANCE_FROM_CENTER:int = 2;		protected var WIDTH:int = 9;		protected var HEIGHT:int = 6;		protected var CORNER:Number = 2;						/*		 * 		 * CONSTRUCTOR		 * 		 */		public function Petal()		{			super();		}		public function initialize():void		{			progress(0);		}		public function finalize():void		{			progress(0);		}						/*		 * 		 * CONTENT		 * 		 */		override protected function createContent():void		{			this.graphics.clear();			this.graphics.beginFill(COLOR);			this.graphics.drawRoundRect(-HEIGHT / 2, -DISTANCE_FROM_CENTER, HEIGHT, -WIDTH, CORNER, CORNER);			this.graphics.endFill();		}						/*		 * 		 * ON / OFF		 * 		 */		public function progress(percent:Number):void		{			this.alpha = percent;		}	}}
package losrebellos.elements.spinner {	import losrebellos.display.SpritePlus;	/*	 *	 * @author los rebellos	 *	 */	public class Petal extends SpritePlus implements IPetal	{		/*		 *		 * VARIABLES		 *		 */		protected var DISTANCE_FROM_CENTER:int = 2;		protected var WIDTH:int = 9;		protected var HEIGHT:int = 6;		protected var CORNER:Number = 2;						/*		 * 		 * CONSTRUCTOR		 * 		 */		public function Petal()		{			super();						off();		}						/*		 * 		 * CONTENT		 * 		 */		override protected function createContent():void		{			this.graphics.beginFill(0xffffff);			this.graphics.drawRoundRect(-HEIGHT / 2, -WIDTH - DISTANCE_FROM_CENTER, HEIGHT, -WIDTH, CORNER, CORNER);			this.graphics.endFill();		}						/*		 * 		 * ON / OFF		 * 		 */		public function on():void		{			this.alpha = 1;		}		public function off():void		{			this.alpha = .5;		}	}}
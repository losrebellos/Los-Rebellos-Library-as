package losrebellos.scale {	import flash.geom.Point;	import flash.geom.Rectangle;		/*	 *	 * @author los rebellos	 *	 */	public class Position 	{		/*		 * 		 * GET THE POINT FOR POSITION		 * 		 */		public static function getPositionedPoint(_position_type:String, _rect_object:Rectangle, _rect_resize:Rectangle):Point		{			var result_point:Point = new Point;									// VERTICAL			//////////////////////////////////////////////////			//top			if(_position_type == PositionType.TOP || _position_type == PositionType.TOP_LEFT || _position_type == PositionType.TOP_RIGHT)				result_point.y = 0;			//bottom			else if(_position_type == PositionType.BOTTOM || _position_type == PositionType.BOTTOM_LEFT || _position_type == PositionType.BOTTOM_RIGHT)				result_point.y = getPositioning(1, _rect_object.height, _rect_resize.height);			//middle			else				result_point.y = getPositioning(.5, _rect_object.height, _rect_resize.height);			//////////////////////////////////////////////////									// HORIZONTAL			//////////////////////////////////////////////////			if(_position_type == PositionType.TOP_LEFT || _position_type == PositionType.BOTTOM_LEFT || _position_type == PositionType.MIDDLE_LEFT)				result_point.x = 0;			else if(_position_type == PositionType.TOP_RIGHT || _position_type == PositionType.BOTTOM_RIGHT || _position_type == PositionType.MIDDLE_RIGHT)				result_point.x = getPositioning(1, _rect_object.width, _rect_resize.width);			else				result_point.x = getPositioning(.5, _rect_object.width, _rect_resize.width);			//////////////////////////////////////////////////									return result_point;		}						/*		 * 		 * HORIZONTAL & VERTICAL POSITIONING		 * 		 */		private static function getPositioning(_percent:Number, _object:Number, _resize:Number):Number		{			return (_resize - _object) * _percent;		}	}}
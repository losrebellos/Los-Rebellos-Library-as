package losrebellos.geom {	import flash.geom.Point;	/*	 *	 * @author los rebellos	 *	 */	public class PointPlus extends Point implements IPointPlus	{		/*		 * 		 * CONSTRUCTOR		 * 		 */		public function PointPlus(x:Number = 0, y:Number = 0)		{			super(x, y);		}						/*		 * 		 * ANGLE BETWEEN 2 POINTS IN RADIANS FROM CENTER		 * 		 */		public function angle(p:Point):Number		{			return Math.atan2((p.y - this.y), (p.x - this.x));		}		public static function angle(p1:Point, p2:Point):Number		{			return Math.atan2((p2.y - p1.y), (p2.x - p1.x));		}	}}
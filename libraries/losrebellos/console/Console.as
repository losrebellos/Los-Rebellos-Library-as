package losrebellos.console {	/*	 *	 * @author los rebellos	 *	 */	public class Console 	{		/*		 * 		 * VARIABLES		 * 		 */		public static var PREFIXE:String = ">>> ";		public static var SEPARATOR:String = ": ";				//on/off		public static const ON:String = "console/on";		public static const OFF:String = "console/off";		public static var STATUS:String = ON;						/*		 * 		 * simple output		 * 		 */		public static function simpleOutput(...args):void		{			if(STATUS == ON)			{				var _trace:String = args[0];				for(var i:int = 1; i<args.length; i++)					_trace += SEPARATOR + args[i];								trace(PREFIXE + _trace);			}		}						/*		 * 		 * output		 * 		 */		public static function output(_class:Object, _trace:Object, _prefixe:String = null):void		{			if(STATUS == ON)			{				//PREFIXE overridden				if(_prefixe)					trace(_prefixe + _class + SEPARATOR + _trace);								//PREFIXE normal				else					trace(PREFIXE + _class + SEPARATOR + _trace);			}		}	}}
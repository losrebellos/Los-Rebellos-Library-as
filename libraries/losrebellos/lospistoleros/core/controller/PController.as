package losrebellos.lospistoleros.core.controller {	import losrebellos.lospistoleros.core.accessor.PAccessorEventDispatcher;	import losrebellos.lospistoleros.core.dispatcher.PDispatcher;	import losrebellos.lospistoleros.core.model.IPModel;	import losrebellos.lospistoleros.core.view.IPView;	import flash.errors.IllegalOperationError;	/*	 *	 * @author los rebellos	 *	 */	public class PController extends PAccessorEventDispatcher implements IPController 	{		/*		 * 		 * CONSTRUCTOR		 * 		 */		public function PController(m:IPModel, v:IPView = null, name:String = null, type:String = null) 		{			super(name, type);						saveModel(m);			saveView(v);						PDispatcher.instance.registerController(this);		}						/*		 * 		 * MVC		 * 		 */		protected function saveModel(m:IPModel):void		{			throw new IllegalOperationError("PController.saveModel need to be overridden");		}		protected function saveView(v:IPView):void		{			throw new IllegalOperationError("PController.saveView need to be overridden");		}						/*		 * 		 * EVENTS		 * 		 */		public function initialize():void		{					}		public function finalize():void		{					}	}}
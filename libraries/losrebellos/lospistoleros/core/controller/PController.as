package losrebellos.lospistoleros.core.controller {	import losrebellos.events.EventDispatcherPlus;	import losrebellos.lospistoleros.core.dispatcher.PDispatcher;	import losrebellos.lospistoleros.core.model.IPModel;	import losrebellos.lospistoleros.core.view.IPView;	/*	 *	 * @author los rebellos	 *	 */	public class PController extends EventDispatcherPlus implements IPController 	{		/*		 * 		 * VARIABLES		 * 		 */		protected var _NAME:String = null;		protected var _model:IPModel;		protected var _view:IPView;						/*		 * 		 * CONSTRUCTOR		 * 		 */		public function PController(m:IPModel, v:IPView = null, name:String = null) 		{			super();						_NAME = name;						_model = m;			_view = v;						PDispatcher.instance.registerController(this);		}				/*		 * 		 * MVC ABSTRACT		 * 		 */		public function setModel(m:IPModel):void		{			_model = m;		}		public function getModel():IPModel		{			return _model;		}		public function setView(v:IPView):void		{			_view = v;		}		public function getView():IPView		{			return _view;		}						/*		 * 		 * NAME		 * 		 */		public function set NAME(value:String):void		{			_NAME = value;		}		public function get NAME():String		{			return _NAME;		}						/*		 * 		 * EVENTS		 * 		 */		public function initialize():void		{					}		public function finalize():void		{					}	}}
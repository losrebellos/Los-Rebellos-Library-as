package losrebellos.utils {	import flash.events.IEventDispatcher;	import flash.utils.Timer;	/*	 *	 * @author los rebellos	 *	 */	public class TimerPlus extends Timer implements IEventDispatcher	{		/*		 * 		 * CONSTRUCTOR		 * 		 */		public function TimerPlus(delay:Number, repeatCount:int = 0)		{			super(delay, repeatCount);		}						/*		 * 		 * EVENTS		 * 		 */		override public function addEventListener(type:String, listener:Function, useCapture:Boolean = false, priority:int = 0, useWeakReference:Boolean = false):void		{			super.addEventListener(type, listener, useCapture, priority, true);		}	}}
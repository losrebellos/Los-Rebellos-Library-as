package com.losrebellos.text {	import com.losrebellos.utils.text.StyleSheetUtils;	import flash.text.TextFormat;	/*	 *	 * @author los rebellos	 *	 */	public class TextFormatPlus extends TextFormat implements ITextFormatPlus	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTRUCTOR
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public function TextFormatPlus(font:String = null, size:Object = null, color:Object = null, bold:Object = null, italic:Object = null, underline:Object = null, url:String = null, target:String = null, align:String = null, leftMargin:Object = null, rightMargin:Object = null, indent:Object = null, leading:Object = null)		{			super(font, size, color, bold, italic, underline, url, target, align, leftMargin, rightMargin, indent, leading);		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CSS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public function setFromCSS(object:Object):void		{			if(object["display"])			{				display = object["display"];			}						if(object["kerning"])			{				kerning = object["kerning"];			}						if(object["letterSpacing"])			{				letterSpacing = object["letterSpacing"];			}						if(object["fontFamily"])			{				font = object["fontFamily"];			}						if(object["fontSize"])			{				size = StyleSheetUtils.convertCSSSize(object["fontSize"]);			}						if(object["color"])			{				color = StyleSheetUtils.convertCSSColor(object["color"]);			}						if(object["fontWeight"])			{				bold = object["fontWeight"];			}						if(object["fontStyle"])			{				italic = object["fontStyle"];			}						if(object["textDecoration"])			{				underline = object["textDecoration"];			}						if(object["textAlign"])			{				align = object["textAlign"];			}						if(object["marginLeft"])			{				leftMargin = object["marginLeft"];			}						if(object["marginRight"])			{				rightMargin = object["marginRight"];			}						if(object["textIndent"])			{				indent = object["textIndent"];			}						if(object["leading"])			{				leading = object["leading"];			}		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// UTILS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public function toString():String		{			return "TextFormatPlus: " + this.display + " " + this.kerning + " " + this.letterSpacing + " " + this.font + " " + this.size + " " + this.color + " " + this.bold + " " + this.italic + " " + this.underline + " " + this.align + " " + this.leftMargin + " " + this.rightMargin + " " + this.indent + " " + this.leading;		}	}}
package com.losrebellos.old.render {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.geom.Matrix;	import flash.geom.Rectangle;	/*	 *	 * @author los rebellos - ben@benoitvinay.com	 *	 */	public final class Render 	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// BITMAPDATA
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getBitmapDataAuto(displayObject:DisplayObject, mode:BitmapDataRenderType = null):BitmapData		{			if(displayObject.width > 0 && displayObject.height > 0)			{				mode = mode || new BitmapDataRenderType();								var bmpd:BitmapData = new BitmapData(displayObject.width, displayObject.height, mode.transparent, mode.fillColor);				bmpd.draw(displayObject);								return bmpd;			}						return null;		}		public static function getBitmapData(displayObject:DisplayObject, rect:Rectangle, mode:BitmapDataRenderType = null):BitmapData		{			if(rect.width > 0 && rect.height > 0)			{				mode = mode || new BitmapDataRenderType();								var matrix:Matrix = new Matrix(1, 0, 0, 1, 0, 0);				matrix.translate(-rect.x, -rect.y);								var bmpd:BitmapData = new BitmapData(rect.width, rect.height, mode.transparent, mode.fillColor);//				bmpd.draw(d, matrix, null, null, rect);				bmpd.draw(displayObject, matrix);								return bmpd;			}						return null;		}				////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// BITMAP
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getBitmapAuto(displayObject:DisplayObject, mode:RenderType = null):Bitmap		{			mode = mode || new RenderType();						var bmpd:BitmapData = getBitmapDataAuto(displayObject, mode.bitmapDataRenderMode);			return new Bitmap(bmpd, mode.bitmapRenderMode.pixelSnapping, mode.bitmapRenderMode.smoothing);		}		public static function getBitmap(displayObject:DisplayObject, rect:Rectangle, mode:RenderType = null):Bitmap		{			mode = mode || new RenderType();						var bmpd:BitmapData = getBitmapData(displayObject, rect, mode.bitmapDataRenderMode);			return new Bitmap(bmpd, mode.bitmapRenderMode.pixelSnapping, mode.bitmapRenderMode.smoothing);		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// RESIZE
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		// BitmapData		public static function resizeBitmapData(bitmapData:BitmapData, width:int, height:int, mode:BitmapDataRenderType = null):BitmapData		{			mode = mode || new BitmapDataRenderType();						var amoutWidth:Number = width / bitmapData.width;			var amoutHeight:Number = height / bitmapData.height;						var matrix:Matrix = new Matrix();			matrix.scale(amoutWidth, amoutHeight);						var bmd:BitmapData = new BitmapData(width, height, mode.transparent, mode.fillColor);			bmd.draw(bitmapData, matrix, null, null, null, true);						return bmd;		}		// Bitmap		public static function resizeBitmap(bitmap:Bitmap, width:int, height:int, mode:RenderType = null):Bitmap		{			mode = mode || new RenderType();						var bmd:BitmapData = resizeBitmapData(bitmap.bitmapData, width, height, mode.bitmapDataRenderMode);			return new Bitmap(bmd, mode.bitmapRenderMode.pixelSnapping, mode.bitmapRenderMode.smoothing);		}	}}
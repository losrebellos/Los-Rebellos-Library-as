package com.losrebellos.utils{	/**	 * @author los rebellos - ben@benoitvinay.com	 */	public final class ObjectUtils	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// PRINT AN OBJECT
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function print(obj:*, spaces:String = " // "):String		{			var s:String = obj;			for(var i:String in obj)			{				s += spaces + i + ": ";				s += print(obj[i], spaces + "\t");			}			return s;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// TRACE AN OBJECT
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function traceObject(obj:Object):void		{			for(var i:String in obj)			{				trace("ObjectUtils: " + i + " == " + obj[i]);			}		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// EMPTY
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function isEmpty(obj:Object):Boolean		{			var i:String;			for(i in obj)			{				if(obj[i])				{					return false;				}			}			return true;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// LENGTH
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function length(obj:*):int		{			var count:int = 0;			var i:String;			for(i in obj)			{				if(obj[i])				{					count++;				}			}			return count;		}	}}
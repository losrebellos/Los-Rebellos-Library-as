package com.losrebellos.utils {	import flash.system.ApplicationDomain;	import flash.utils.getQualifiedClassName;	/*	 *	 * @author los rebellos - ben@benoitvinay.com	 *	 */	public final class ClassUtils 	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// APPLICATION DOMAIN
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getDefinitionFromApplicationDomain(app:ApplicationDomain, name:String):Class		{			return app.getDefinition(name) as Class;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CLASS NAME
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getClassName(instance:*):String		{			var classNameSplit:Array = getQualifiedClassName(instance).split("::");			return classNameSplit[classNameSplit.length - 1];		}	}}
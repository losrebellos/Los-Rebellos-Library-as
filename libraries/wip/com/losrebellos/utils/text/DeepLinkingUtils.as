package com.losrebellos.utils.text {	/*	 *	 * @author los rebellos	 *	 */	public class DeepLinkingUtils 	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// EMPTY
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function isEmpty(url:String):Boolean		{			url = StringUtils.multipleReplace(url, ["", ""], [" ", "/"]);			return (url == "") || (url == "/");		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// DATA
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getVarFromQueryString(url:String, name:String, Clazz:Class, defaultValue:* = null):*		{			var urlSplit:Array = url.split("&");			for(var i:int = 0; i<urlSplit.length; i++)			{				var vars:Array = String(urlSplit[i]).split("=");				if(vars[0] && vars[1] && vars[0] == name)				{					return vars[1] as Clazz;				}			}						return defaultValue;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CLEAN
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function cleanValue(url:String):String		{			return StringUtils.multipleReplace(url, ["&", "=", "/", "'", "\""], ["", "", "", "", ""]);		}	}}
package com.losrebellos.project.framework.robotlegs.plugin.clock.events
{
	import flash.events.Event;

	/**
	 * @author Los Rebellos (Benoit Vinay)
	 */
	public final class PeakEvent extends Event
	{
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTANTS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public static const CPU:String = "PeakEvent/cpu";
		public static const FPS:String = "PeakEvent/fps";
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// VARIABLES
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public var data:Number;
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTRUCTOR
		// //////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public function PeakEvent(type:String, data:Number = -1, bubbles:Boolean = false, cancelable:Boolean = false)
		{
			super(type, bubbles, cancelable);
			
			this.data = data;
		}
	}
}
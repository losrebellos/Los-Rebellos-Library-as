package com.losrebellos.project.framework.robotlegs.application
{
	import com.losrebellos.project.framework.base.application.preloader.IApplicationPreloader;
	import com.losrebellos.project.framework.base.mvcs.ViewContainer;

	import flash.events.Event;

	/**
	 * @author Benoit vinay - ben@benoitvinay.com
	 */
	public class RobotlegsApplication extends ViewContainer implements IRobotlegsApplication
	{
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// VARIABLES
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		protected var _ContextClass:Class;
		protected var _context:RobotlegsApplicationContext;
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTRUCTOR
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public function RobotlegsApplication(ContextClass:Class)
		{
			super();
			
			_ContextClass = ContextClass;
		}
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// STAGE
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		override protected function onAddedToStage(e:Event):void
		{
			_context = new _ContextClass(this);
			
			super.onAddedToStage(e);
		}
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// PRELOADER
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		protected var _preloader:IApplicationPreloader;
		public function set preloader(value:IApplicationPreloader):void
		{
			_preloader = value;
		}
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// INTERACTION
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public function enable():void
		{
			
		}
		public function disable():void
		{
			
		}
	}
}
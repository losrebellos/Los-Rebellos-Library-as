	public final class CountDownEvent extends EventPlus 
	{
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTANTS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public static const UPDATE:String = "CountDownEvent/update";
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// VARIABLES
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public var dateUTC:Number;
		public var date:Date;
		
		
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTRUCTOR
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		public function CountDownEvent(type:String, dateUTC:Number)
		{
			super(type);
			
			this.dateUTC = dateUTC;
			this.date = new Date(dateUTC);
		}
	}
}
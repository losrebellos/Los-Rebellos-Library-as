package com.losrebellos.project.display.spinner {	import com.losrebellos.display.base.SpritePlus;	/*	 *	 * @author los rebellos	 *	 */	public class Petal extends SpritePlus implements IPetal	{		/*		 *		 * VARIABLES		 *		 */		protected var _color:uint = 0xffffff;		protected var _distanceFromCenter:int = 2;		protected var _width:int = 9;		protected var _height:int = 6;		protected var _corner:Number = 2;						/*		 * 		 * CONSTRUCTOR		 * 		 */		public function Petal()		{			super();		}		public function enable():void		{			update(0);		}		public function disable():void		{			update(0);		}						/*		 * 		 * CONTENT		 * 		 */		override protected function createContent():void		{			this.graphics.clear();			this.graphics.beginFill(_color);			this.graphics.drawRoundRect(-_height / 2, -11.5, _height, -_width, _corner, _corner);			this.graphics.endFill();		}						/*		 * 		 * ON / OFF		 * 		 */		public function update(percent:Number):void		{			this.alpha = percent;		}	}}
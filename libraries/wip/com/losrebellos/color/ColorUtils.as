package com.losrebellos.color {	import flash.display.DisplayObject;	import flash.filters.ColorMatrixFilter;	/**	 * 	 * @author los rebellos	 * 	 */	public final class ColorUtils	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CHANGE THE COLOR OF A DISPLAYOBJECT
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function changeColour(displayObject:DisplayObject,color:uint):void		{			displayObject.transform.colorTransform = new Color(color);		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// COLORMATRIXs
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static const NORMAL_COLOR_FILTER:ColorMatrixFilter	= new ColorMatrixFilter(ColorMatrixUtils.NORMAL_COLOR);		public static const GREY_SCALE_FILTER:ColorMatrixFilter		= new ColorMatrixFilter(ColorMatrixUtils.GREY_SCALE);		public static function getBlackWhiteFilter(threshold:int = 128):ColorMatrixFilter		{			return new ColorMatrixFilter(ColorMatrixUtils.BLACK_WHITE(threshold));		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// RESET THE NORMAL COLORS OF A DISPLAYOBJECT
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function setNormalColour(displayObject:DisplayObject):ColorMatrixFilter		{			var filter:ColorMatrixFilter = NORMAL_COLOR_FILTER.clone() as ColorMatrixFilter;			displayObject.filters = [filter];						return filter;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// DISPLAYOBJECT GOES GREY SCALE
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function setGreyScale(displayObject:DisplayObject):ColorMatrixFilter		{			var filter:ColorMatrixFilter = GREY_SCALE_FILTER.clone() as ColorMatrixFilter;			displayObject.filters = [filter];						return filter;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// DISPLAYOBJECT GOES BLACK & WHITE
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function setBlackWhite(displayObject:DisplayObject, threshold:int = 128):ColorMatrixFilter		{			var filter:ColorMatrixFilter = getBlackWhiteFilter(threshold);			displayObject.filters = [filter];						return filter;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// RANDOM COLOR
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getRandomColor():uint		{			return Math.random() * 0xffffff;		}	}}
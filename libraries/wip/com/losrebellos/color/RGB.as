package com.losrebellos.color {	/**	 * 	 * @author los rebellos	 * 	 */	public class RGB extends Object	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTANTS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static const GREY_SCALE:RGB		= new RGB(0.212671, 0.715160, 0.072169);		public static const BLACK_WHITE:RGB		= new RGB(0.212671 * 256, 0.715160 * 256, 0.072169 * 256);						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// VARIABLES
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public var red:Number = 1;		public var green:Number = 1;		public var blue:Number = 1;				////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTRUCTOR
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public function RGB(red:Number = 1, green:Number = 1, blue:Number = 1) 		{			super();						this.red = red;			this.green = green;			this.blue = blue;		}		public function set color(value:uint):void		{			red = (value >> 16 & 0xFF) / 255;			green = (value >> 8  & 0xFF) / 255;			blue = (value & 0xFF) / 255;		}	}}
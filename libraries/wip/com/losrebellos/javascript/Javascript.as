package com.losrebellos.javascript{	import flash.external.ExternalInterface;	/*	 * 	 * @author los rebellos	 * 	 */	public final class Javascript	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// AVAILABLE
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function get available():Boolean		{			return ExternalInterface.available;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// LISTENERS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function addCallback(type:String, listener:Function):Boolean		{			return callBack(type, listener);		}		public static function removeCallBack(type:String):Boolean		{			return callBack(type);		}		private static function callBack(type:String, listener:Function = null):Boolean		{			if(ExternalInterface.available)			{				ExternalInterface.addCallback(type, listener);								return true;			}						return false;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CALL
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function call(functionName:String, ...args):Boolean		{			if(ExternalInterface.available)			{				ExternalInterface.call(functionName, args);								return true;			}						return false;		}	}}
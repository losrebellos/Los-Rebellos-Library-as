package com.losrebellos.scale {	import flash.geom.Point;	import flash.geom.Rectangle;	/*	 *	 * @author los rebellos	 *	 */	public final class Position 	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// GET THE POINT FOR POSITION
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public static function getPositionedPoint(positionType:String, rectObject:Rectangle, rectResize:Rectangle):Point		{			var result:Point = new Point;						// VERTICAL			// top			if(positionType == PositionType.TOP || positionType == PositionType.TOP_LEFT || positionType == PositionType.TOP_RIGHT)			{				result.y = 0;			}						// bottom			else if(positionType == PositionType.BOTTOM || positionType == PositionType.BOTTOM_LEFT || positionType == PositionType.BOTTOM_RIGHT)			{				result.y = getPositioning(1, rectObject.height, rectResize.height);			}						// middle			else			{				result.y = getPositioning(.5, rectObject.height, rectResize.height);			}						// HORIZONTAL			if(positionType == PositionType.TOP_LEFT || positionType == PositionType.BOTTOM_LEFT || positionType == PositionType.MIDDLE_LEFT)			{				result.x = 0;			}			else if(positionType == PositionType.TOP_RIGHT || positionType == PositionType.BOTTOM_RIGHT || positionType == PositionType.MIDDLE_RIGHT)			{				result.x = getPositioning(1, rectObject.width, rectResize.width);			}			else			{				result.x = getPositioning(.5, rectObject.width, rectResize.width);			}						// result			return result;		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// HORIZONTAL & VERTICAL POSITIONING
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		private static function getPositioning(percent:Number, object:Number, resize:Number):Number		{			return (resize - object) * percent;		}	}}
package com.losrebellos.math {	/**	 * 	 * @author los rebellos - ben@benoitvinay.com	 * 	 */	public class Interval	{		////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// VARIABLES
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public var min:Number = 0;		public var max:Number = 0;						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// CONSTRUCTOR
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public function Interval(min:Number = 0, max:Number = 0)		{			if(min < max)			{				this.min = min;				this.max = max;			}			else if(min > max)			{				this.min = max;				this.max = min;			}			else			{				this.min = this.max = min;			}		}						////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		// UTILS
		////////////////////////////////////////////////////////////////////////////////////////////////////////////////		public function test(num:Number):Boolean		{			return (num >= min && num <= max);		}		public function toString():String		{			return "Interval: min (" + min + "), max (" + max + ")";		}	}}